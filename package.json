{
  "name": "template-npmjs",
  "version": "0.0.2",
  "description": "Template to create a new npmjs lib",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && tsc -b tsconfig.build.json",
    "build:watch": "npm run build -- -w",
    "eslint": "eslint 'src/**' --fix",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run eslint",
    "preversion": "npm run eslint",
    "version": "npm run eslint && git add -A src",
    "postversion": "git push && git push --tags",
    "test": "jest --passWithNoTests --no-cache --runInBand --silent --noStackTrace --collectCoverage=false",
    "test:verbose": "jest --passWithNoTests --no-cache --runInBand",
    "test:unit": "npm test -- -c jest-unit.config.js --watch",
    "test:integration": "npm test -- -c jest-integration.config.js --watch",
    "test:staged": "npm test -- --findRelatedTests tests",
    "test:ci": "npm test -- --coverage"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leal32b/template-npmjs.git"
  },
  "keywords": [
    "template",
    "npmjs"
  ],
  "author": "leal32b",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leal32b/template-npmjs/issues"
  },
  "homepage": "https://github.com/leal32b/template-npmjs#readme",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "eslint": "^8.13.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "git-commit-msg-linter": "^4.1.1",
    "husky": "4.3.8",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  }
}
