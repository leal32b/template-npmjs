{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "esnext",
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["test/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
    ]
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules"]
}
